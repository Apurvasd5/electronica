<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/content_cat"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/cat_mobile_button"
        android:layout_width="150dp"
        android:background="@drawable/shape_circle"
        android:layout_height="150dp"
        app:srcCompat="@drawable/smartphone_icon"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_alignTop="@+id/cat_laptop_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/cat_laptop_button"
        android:background="@drawable/shape_circle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/laptop_icon"

        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <ImageButton
        android:id="@+id/cat_washing_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/washingmachine_icon"
        android:background="@drawable/shape_circle"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/cat_mobile_button"
        android:layout_alignStart="@+id/cat_mobile_button"
        android:layout_marginBottom="33dp" />

    <ImageButton
        android:id="@+id/cat_fridge_button"
        android:background="@drawable/shape_circle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/refrigerator_icon"
        android:layout_alignTop="@+id/cat_washing_button"
        android:layout_alignLeft="@+id/cat_laptop_button"
        android:layout_alignStart="@+id/cat_laptop_button" />

    <ImageButton
        android:id="@+id/cat_tv_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="false"
        android:background="@drawable/shape_circle"
        app:srcCompat="@drawable/television" />


</RelativeLayout>